<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.faehrhaus.mm">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_faehrhaus"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FaerhausApp">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ContactActivity" />
        <activity android:name=".StepsActivity1" />
        <activity android:name=".StepsActivity2" />
        <activity android:name=".AffiliationActivity" />
    </application>
</manifest>